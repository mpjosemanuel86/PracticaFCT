<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".ui.fragments.PantallaEnergiaFragment">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="370dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/imageViewEnergia"
        android:src="@drawable/plan_gestiones"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textViewEnergia"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewEnergia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Estamos trabajando en mejorar la App. Tus paneles solares siguen produciendo, en breve podrás seguir viendo tu producción solar. Sentimos las molestias."

        />


</androidx.constraintlayout.widget.ConstraintLayout>