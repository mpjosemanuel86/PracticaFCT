<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Otros atributos de estilo -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item> <!-- Tamaño del texto -->
        <item name="android:textStyle">bold</item> <!-- Estilo del texto -->
    </style>

    <!-- Estilo personalizado para el botón de login/registro -->
    <style name="boton_login_registrate">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Tema predeterminado -->
    <style name="DefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Tema alternativo -->
    <style name="AlternateTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/alternatePrimary</item>
        <item name="colorPrimaryDark">@color/alternatePrimaryDark</item>
        <item name="colorAccent">@color/alternateAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
